<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main>
                <div>
                    <a href="/animals/new"><button>Create a New Animal</button></a>
                    <% for (animal of animals) { %>
                        <article>
                                <h2
                                hx-get="/animals/<%= animal._id %>"
                                hx-trigger="click"
                                hx-target="div"
                                hx-swap="innerHTML">
                                    <%= animal.species %>
                                </h2>
                            </a>
                        </article>
                        <% } %>

                </div>
            </main>
    </body>

</html>